# CKX Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# PostgreSQL Database
# =============================================================================
POSTGRES_DB=ckx
POSTGRES_USER=ckx
POSTGRES_PASSWORD=ckx-dev-password

# =============================================================================
# JWT Authentication
# =============================================================================
# IMPORTANT: Change this secret in production!
JWT_SECRET=ckx-jwt-secret-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# =============================================================================
# Stripe Payment Integration (Phase 4)
# =============================================================================
# Get your keys from: https://dashboard.stripe.com/apikeys
# Use test keys for development (sk_test_... and pk_test_...)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Webhook secret for verifying Stripe webhook signatures
# Get this from: https://dashboard.stripe.com/webhooks
# For local development with Stripe CLI: stripe listen --forward-to localhost:30080/facilitator/api/v1/billing/webhook
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# Application URLs
# =============================================================================
# Base URL for the application (used for Stripe redirect URLs)
APP_URL=http://localhost:30080

# =============================================================================
# Optional: Metrics Tracking
# =============================================================================
TRACK_METRICS=false
